
<div class="container">
  <div class="row">
    <%= simple_form_for @cocktail do |f| %>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h3 class="text-center">Name of new Cocktail</h3>
      <form action="#">
        <div class="form-group">
          <label for="email"><%= f.input :name %></label>
        </div>
        <div class="form-group">
          <label for="password"><%= f.input :photos, as: :attachinary %></label>
        </div>
        <label for="submit"><%= f.submit %></label>
      </form>
    </div>
    <div class="row">
      <%= link_to 'all cocktails', cocktails_path, {class: "btn btn-success btn-lg"} %>
    </div>
    <% end %>
  </div>
</div>


