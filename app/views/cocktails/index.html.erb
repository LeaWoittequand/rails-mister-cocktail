<h2 class="text-center"><%= link_to "new", new_cocktail_path, {class: "btn btn-success btn-lg"} %></h2>
<h3 class="text-center">All Cocktails of our members</h3>

<div class="container cocktaillist">
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4 card_container">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://www.pexels.com/photo/black-and-white-alcohol-bar-drinks-4295/');">
          <div class="card-category"><%= link_to cocktail.name, cocktail_path(cocktail) %></div>
        </div>
      </div>
    <% end %>
  </div>
</div>
