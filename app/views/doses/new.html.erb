
<div class="container">
  <div class="row">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <h3 class="text-center">Name of new Cocktail</h3>
      <form action="#">
        <div class="form-group">
          <label for="email"><%= f.input :description %></label>
        </div>
        <div class="form-group">
          <label for="password"><%= f.input :ingredient_id, collection: Ingredient.all, prompt: "ingredients" %></label>
        </div>
        <label for="submit"><%= f.submit "add a new dose", class: "btn btn-sucess" %></label>
      </form>
    </div>
    <% end %>
  </div>
</div>
